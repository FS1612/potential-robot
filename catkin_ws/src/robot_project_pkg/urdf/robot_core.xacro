<?xml version="1.0" encoding='UTF-8'?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
<xacro:include filename="$(find robot_project_pkg)/urdf/inertial_calculations.xacro"/>
    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <!-- Base link: asse di rotazione delle ruote con asse di rotazione al centro-->
    <link name="base_link">
    </link>

    <!-- chassis link-->
    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <!-- voglio l'origine degli assi in basso e al centro parte posteriore del robot, dietro l'asse di rotazione delle ruote  -->
        <origin xyz="-0.1 0 0"/>
    </joint>

    <link name="chassis">
        <visual>
            <!-- voglio l'origine degli assi in basso e nella parte posteriore del robot, ma di default io avrÃ² l'origine degli assi al centro dello chassis  -->
            <origin xyz="0.15 0 0.075"/>
            <geometry>
                <!-- forma cilindrica  -->
                <cylinder radius="0.3" length="0.15"/>
            </geometry>
            <material name="white"/>
        </visual>
    
		<!-- aggiungo le collisioni allo chassis: il collider ha la stessa forma dello chassis-->
		<!-- i collider possono avere forme diverse, in tal caso nella visualizzazione su rviz si vedranno tutte le differenze-->
        <collision>
			<geometry>         
            	<cylinder radius="0.3" length="0.15"/>
			</geometry>
		</collision>
		<xacro:inertial_cylinder  mass="0.8" length="0.15" radius="0.3" >
			<!--l'origine deve essere la stessa del visual(approfondire!!!)-->
			<origin xyz="0.15 0 0.075" rpy="0 0 0"/>
		</xacro:inertial_cylinder >
		
    </link>

    <!-- Left wheel -->
    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <!-- voglio che la ruota sia spostata rispetto al centro -->
        <!-- voglio l'origine degli assi in basso e al centro parte posteriore del robot, dietro l'asse di rotazione delle ruote  -->
        <!-- r->roll (x) p->pitch(y) y->yaw(z)  -->
        <!-- le x aumentano verso dx  -->
        <origin xyz="0 0.175 0" rpy="-1.5708 0 0"/>
        <!-- deve ruotare lungo l'asse z(rotazione positiva in senso antiorario)  -->
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
            <material name="blue"/>
        </visual>
		<!-- aggiungo le collisioni alla ruota cosi da rendere possibile il movimento il collider ha la stessa forma della ruota-->
        <collision>
			<geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
		</collision>
		<xacro:inertial_cylinder  mass="0.1" length="0.04" radius="0.05" >
			<!--l'origine deve essere la stessa del visual(approfondire!!!)-->
			<origin xyz="0 0 0" rpy="0 0 0"/>
		</xacro:inertial_cylinder >
    </link>

    <!-- Right wheel -->
    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <!-- voglio che la ruota sia spostata rispetto al centro -->
        <!-- voglio l'origine degli assi in basso e al centro parte posteriore del robot, dietro l'asse di rotazione delle ruote  -->
        <!-- r->roll (x) p->pitch(y) y->yaw(z)  -->
        <!-- sono all'altro lato rispetto alla ruota sinistra(ruoto di pi/2 e sposto a sx la ruota) -->
        <origin xyz="0 -0.175 0" rpy="1.5708 0 0"/>
        <!-- deve ruotare lungo l'asse z(rotazione positiva in senso antiorario)  -->
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
            <material name="blue"/>
        </visual>
		<!-- aggiungo le collisioni alla ruota cosi da rendere possibile il movimento il collider ha la stessa forma della ruota-->
        <collision>
			<geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
		</collision>
		<xacro:inertial_cylinder  mass="0.1" length="0.04" radius="0.05" >
			<!--l'origine deve essere la stessa del visual(approfondire!!!)-->
			<origin xyz="0 0 0" rpy="0 0 0"/>
		</xacro:inertial_cylinder >
    </link>
    
	<!-- Ruota centrale -->
    <joint name="central_wheel_joint" type="continuous">
        <parent link="chassis"/>
        <child link="central_wheel"/>
        <!-- voglio che la ruota sia spostata rispetto al centro -->
        <!-- voglio l'origine degli assi spostata in avanti  -->
        <origin xyz="0.24 0 0" />
        
    </joint>

    <link name="central_wheel">
        <visual>
            <geometry>
                <sphere radius="0.05"/> 
            </geometry>
            <material name="black"/>
        </visual>
		<!-- aggiungo le collisioni alla ruota cosi da rendere possibile il movimento il collider ha la stessa forma della ruota-->
        <collision>
			<geometry>
                <sphere radius="0.05"/> 
            </geometry>
		</collision>
		<xacro:inertial_sphere  mass="0.1" radius="0.05" >
			<!--l'origine deve essere la stessa del visual(approfondire!!!)-->
			<origin xyz="0 0 0" rpy="0 0 0"/>
		</xacro:inertial_sphere >
    </link>
    
   
</robot>
